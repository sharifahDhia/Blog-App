@model RegisterLoginView

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign in/up to your blog!</h2>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form asp-action="Register" asp-controller="Account" method="post">
			<h1>Create Account</h1> 
			<div class="form-group">
				<label asp-for="Register.Email"></label>
				<input asp-for="Register.Email" class="form-control" />
				<span asp-validation-for="Register.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Register.Password"></label>
				<input asp-for="Register.Password" class="form-control" type="password" />
				<span asp-validation-for="Register.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Register.ConfirmPassword"></label>
				<input asp-for="Register.ConfirmPassword" class="form-control" type="password" />
				<span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form asp-action="Login" asp-controller="Account" method="post">
			<h1>Sign in</h1>
			<div class="form-group">
				<label asp-for="Login.Email"></label>
				<input asp-for="Login.Email" class="form-control" />
				<span asp-validation-for="Login.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Login.Password"></label>
				<input asp-for="Login.Password" class="form-control" type="password" />
				<span asp-validation-for="Login.Password" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>

