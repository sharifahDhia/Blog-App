@model blogApp.Models.Blog
@{
    ViewData["Title"] = "Delete Blog Post";
}


<div class="form-container sign-in-container" style="margin-left: 25%; padding: 20px 0">

    <h1 style="margin: 30px">Delete Blog Post</h1>

    <h3 style="color: #3c97bf;">Are you sure you want to delete this?</h3>

    <div>
        <h3 style="color: #222;">@Model.Title</h3>
        <div>
            <p>@Model.Content</p>
        </div>
    </div>

    <form asp-action="Delete" style="height: 50%">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #ff4b2b" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>

